# Exemplo de estrutura de decisão e repetição em Python

# Função para verificar se um número é par ou ímpar
def verificar_paridade(numero):
    if numero % 2 == 0:
        return "par"
    else:
        return "ímpar"

# Estrutura de repetição: loop para entrada e verificação de números
def main():
    # Número de iterações do loop
    n = 5

    for i in range(n):
        try:
            # Entrada do usuário
            numero = int(input("Digite um número inteiro: "))
            
            # Verificação e exibição da paridade
            resultado = verificar_paridade(numero)
            print(f"O número {numero} é {resultado}.")
        
        except ValueError:
            print("Por favor, digite um número inteiro válido.")
    
# Chama a função principal
if __name__ == "__main__":
    main()

